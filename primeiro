include <stdio.h>

int main()
{
    int n1,n2;
    int *p1, *p2;
    
    p1 = &n1;
    p2 = &n2;
    
    
    printf("Digite o primeiro valor: ");
    scanf("%d", p1);
    printf("Digite o segundo valor: ");
    scanf("%d", p2);
    
    printf("Soma dos valores: %d + %d = %d \n", *p1, *p2, (*p1 + *p2));
    printf("Subt dos valores: %d \n", (*p1 - *p2));
    printf("Div dos valores: %d \n", (*p1 / *p2));
    printf("Multi dos valores: %d \n", (*p1 * *p2));
    
    return 0;

}
